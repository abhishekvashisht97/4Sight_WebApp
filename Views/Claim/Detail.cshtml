@model AyushmanBharat.Models.ViewModels.ClaimVM
@using AyushmanBharat.Common
@{
    ViewBag.Title = "Claim";
}

<section class="content-header">
    <h1>
        Claim Detail<small class="text-muted">(Created On:@Model.CreatedOn.Date.ToString("dd-MM-yyyy"))</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>
            @{
                Model.ButtonType = "BreadCrumb";
                Html.RenderPartial("~/Views/Claim/_BackToList.cshtml", Model);
            }
        </li>

        <li class="active">Detail</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                @{
                    Html.RenderPartial("~/Views/Claim/_DetailPartial.cshtml", Model);
                }
                <div class="clearfix"></div>
                <div class="form-group col-md-12">
                    <center>
                        @{
                            Model.ButtonType = "BackToList";
                            Html.RenderPartial("~/Views/Claim/_BackToList.cshtml", Model);

                        }
                        <a class="btn btn-danger" href="@Url.Action("CreatePDF", "Claim", new { claimID = Model.ClaimID })"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> Download Pdf </a>
                        @if (Model.UploadedFilesCount > 0)
                        {
                            <a class="btn btn-success" href="@Url.Action("DownloadUploadedFiles","Claim", new { BatchID = Model.BatchID, FileName = Model.ClaimFileName})"><i class="fa fa-download" aria-hidden="true"></i> Download File </a>
                        }

                    </center>
                </div>

            </div>
        </div>
    </div>
</section>

