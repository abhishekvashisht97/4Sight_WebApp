@using AyushmanBharat.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>4Sight</title>

    <link href="~/Content/assets/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets/css/main.css">

</head>

<body>

    <header class="head-main">
        <div class="container-fluid top-bar">
            <div class="row align-items-center">
                <div class="col-4 sight-logo"><img class="img-fluid" src="~/Content/assets/img/small-logo.png"></div>
                <div class="col-4 offset-4 group-logo">
                    <a href="http://inchesgroup.in/" target="_blank"><img class="img-fluid" src="~/Content/assets/img/final-logo.png"></a>
                </div>
            </div>
        </div>

    </header>

    <div class="jumbotron jumbotron-fluid jumbotron-main">
        <div id="particles-js">
            <canvas class="particles-js-canvas-el"></canvas>
        </div>
        <div class="container-fluid jumbotron-content">
            <div class="row align-items-center justify-content-center content">
                <div class="col-md-8 align-self-center jumbotron-heading">
                    <center>
                        <h1>Insurance Analytics</h1>
                        <p class="lead">
                            Amalgamation of insurance experience, medical expertise, legal knowledge and
                            technology aiding sales, underwriting and claim processes
                        </p>
                    </center>
                </div>
                <div class="col-md-4 align-self-center login-clean">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="sr-only">Login Form</h2>
                        <div class="illustration">
                            <img src="~/Content/assets/img/loginarrow.png" />
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(t => t.UserName, new { @class = "form-control", @placeholder = "Username" , @autoComplete= "off"})
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @autoComplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">Log In</button>
                                </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <p class="copyright text-center">4Sight © 2019</p>
                </div>
                <div class="col-5">
                    <p class="copyright text-right">
                        <span>WebSite Development & Design by : </span>
                        <a target="_blank" class="FooterSentientSys" href="http://www.sentientsystems.net" style="color: #B20000; font-weight: bold; text-decoration:none">
                            Sentient Systems Pvt Ltd
                        </a>
                    </p>

                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/assets/js/jquery-3.4.1.slim.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/particles.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>