@model AyushmanBharat.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<section class="content-header">
    <h1>
        Reset Password<small class="text-muted"> @Model.UserName</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body pad">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                      
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        @Html.HiddenFor(model => model.UserID)
                      
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-md-offset-1 control-label" })
                            <div class="col-md-6">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-md-offset-1 control-label" })
                            <div class="col-md-6">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-10">
                                <input type="submit" class="btn btn-success" value="Reset" />
                                <a class="btn btn-info" title="Click to back" href="@Url.Action("Users","Account")"> Back To List</a>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
