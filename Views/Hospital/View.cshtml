                                <strong>@Html.DisplayNameFor(model => model.Latitude)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Latitude)
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.Altitude)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Altitude)
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.Longitude)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Longitude)
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.EmpaneledStatus)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.EmpaneledStatus)
                            </div>
                        </div>


                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="box box-primary">
                    <div class="box-header with-border">
