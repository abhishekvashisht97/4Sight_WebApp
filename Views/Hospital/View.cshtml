                                <strong>@Html.DisplayNameFor(model => model.PinCode)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.PinCode)
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
