                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.BlockName)
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.OT)</strong>
                            </div>
                            <div class="col-md-8">
                                @if (Model.OT == true)
                                {
                                    <span class="glyphicon glyphicon-ok text-success"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                }
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.ICU)</strong>
                            </div>
                            <div class="col-md-8">
                                @if (Model.ICU == true)
                                {
                                    <span class="glyphicon glyphicon-ok text-success"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                }
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.Rating)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(t => t.Rating)

                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.NoOfBeds)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.NoOfBeds)
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.NoOfICUBeds)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.NoOfICUBeds)
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.LandlineNumber)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.LandlineNumber)
                            </div>
                        </div>



                        <div class="clearfix"></div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.Sequence)</strong>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Sequence)
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <strong>@Html.DisplayNameFor(model => model.Active)</strong>
                            </div>
                            <div class="col-md-8">
                                @if (Model.Active == true)
                                {
                                    <span class="glyphicon glyphicon-ok text-success"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove text-danger"></span>
                                }
                            </div>
                        </div>

                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="form-group col-md-12">
                    <center>
                        <a href="@Url.Action("Edit", "Hospital", new { id = Model.HospitalID})" title="Edit" class="btn btn-success">Edit</a>
                        <a class="btn btn-info" href="@Url.Action("Index","Hospital",new { id=Model.StateID}  )"> Back To List</a>
                    </center>
                </div>

            </div>
        </div>
    </div>


